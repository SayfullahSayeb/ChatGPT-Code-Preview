{
    "manifest_version": 3,
    "name": "ChatGPT Code Preview",
    "version": "1.3",
    "description": "Preview, copy, and download code from ChatGPT with CSP Unblock for chatgpt.com",
    "permissions": ["activeTab", "webRequest", "webRequestBlocking"],
    "host_permissions": [
        "https://chatgpt.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://chat.openai.com/*",
                "https://chatgpt.com/*"
            ],
            "js": ["content.js"],
            "css": ["styles.css"]
        }
    ]
}
